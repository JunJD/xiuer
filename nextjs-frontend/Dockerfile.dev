# Dockerfile for local development (nextjs-frontend)

FROM node:20-slim
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy dependency definition files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies
RUN pnpm install

# Expose port
EXPOSE 3000

# Start the development server
CMD ["pnpm", "dev"] 